<h2>Search Vanue's tips</h2>

<div class="row" >
<div class="span6 offset3" >

    <%= form_tag nil, :method => :get do %>

      <%= label_tag "Name of venue:" %>
      <%= text_field_tag "name", params[:name] %>
      <%= submit_tag "search", :id => "idbutton_venues", :class => "btn btn-large btn-primary" %>        
    <% end %>
  </div>
</div>


<% if !@tips.nil? %>

<%  if (@tips.items.size == 0) then %>
<b>No results</b>
<% else %>

<h3>Results</h3>
<br>
<table class="table">
<tr>
<th>Text</th>
<th>firstName</th>
<th>lastName</th>
<th>Create At</th>
</tr>


<%  if (@tips.items.size == 0) then %>
<b>No results</b>
<% else %>

<% @tips.items.each do |tip| %>
<tr>
<td><%= tip["text"] %></td>
<td><%= tip["user"]["firstName"] %></td>
<td><%= tip["user"]["lastName"] %></td>
<td><%= tip["createdAt"] %></td>
</tr>
<% end %>

</table>
<% end %>
<% end %>
<% end %>