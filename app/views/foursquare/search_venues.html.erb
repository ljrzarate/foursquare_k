<h2>Search Vanues</h2>

<div class="row" >
<div class="span6 offset3" >

    <%= form_tag nil, :method => :get do %>

      <%= label_tag "Name of venue:" %>
      <%= text_field_tag "name", params[:name] %>
      <%= submit_tag "search", :id => "idbutton_venues", :class => "btn btn-large btn-primary" %>        
    <% end %>
  </div>
</div>

<% if !@venues.nil? %>

<%  if (@venues.groups.size == 0) then %>
<b>No results</b>
<% else %>

<h3>Results</h3>
<br>
<table class="table">
<tr>
<th>Name</th>
<th>Address</th>
<th>City</th>
<th>Country</th>
<th>Phone</th>
</tr>

<% @venues.groups.each do |venue| %>
<%  items = venue["items"] %>

<%  if (items.size == 0) then %>
<b>No results</b>
<% else %>

<% items.each do |i| %>
<tr>
<td><%= i["name"] %></td>
<td><%= i["location"]["address"] %></td>
<td><%= i["location"]["city"] %></td>
<td><%= i["location"]["country"] %></td>
<td><%= i["contact"]["phone"] %></td>
</tr>
<% end %>
<% end %>
<% end %>

</table>
<% end %>
<% end %>
